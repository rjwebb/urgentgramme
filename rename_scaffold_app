if [ "$#" -ne 1 ]; then
    echo "Please supply a single argument of the new app name"
    exit 1
fi

if [[ "$OSTYPE" == 'linux-gnu' ]]; then
    find . -path ./sitepackages -prune -o \( -name '*.py' -o -name 'app.yaml' \) -print -exec sed -i "s/scaffold/$1/g" {} +;
else
    find . -path ./sitepackages -prune -o \( -name '*.py' -o -name 'app.yaml' \) -print -exec sed -i '' "s/scaffold/$1/g" {} \;
fi

mv ./scaffold $1
